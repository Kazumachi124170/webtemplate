mixin announcement__briefing( briefing )
  section( class=`briefing announcement__briefing announcement__briefing--${briefing.classname}`, href=briefing.articleUrl )
    h1( class='briefing__title' )= briefing.title
    aside( class='tags briefing__tags' )
      each tag in briefing.tags
        button( class=`tags__tag tags__tag--${ tag }` )
          a= tag
    p( class='briefing__article' )= briefing.excerpt
    time( class='briefing__time' )= briefing.time

